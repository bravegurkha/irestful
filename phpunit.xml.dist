<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="true"
         syntaxCheck="false"
         bootstrap="./vendor/autoload.php">

    <testsuites>
        <testsuite name="input-unit">
            <directory suffix="Test.php">./src/iRESTful/Rodson/Tests/Inputs/Tests/Unit</directory>
        </testsuite>
        <testsuite name="input-functional">
            <directory suffix="Test.php">./src/iRESTful/Rodson/Tests/Inputs/Tests/Functional</directory>
        </testsuite>

        <testsuite name="middle-unit">
            <directory suffix="Test.php">./src/iRESTful/Rodson/Tests/Middles/Tests/Unit</directory>
        </testsuite>
        <testsuite name="middle-functional">
            <directory suffix="Test.php">./src/iRESTful/Rodson/Tests/Middles/Tests/Functional</directory>
        </testsuite>

        <testsuite name="output-unit">
            <directory suffix="Test.php">./src/iRESTful/Rodson/Tests/Outputs/Tests/Unit</directory>
        </testsuite>
        <testsuite name="output-functional">
            <directory suffix="Test.php">./src/iRESTful/Rodson/Tests/Outputs/Tests/Functional</directory>
        </testsuite>

        <testsuite name="applications-unit">
            <directory suffix="Test.php">./src/iRESTful/Rodson/Tests/Applications/Tests/Unit</directory>
        </testsuite>
        <testsuite name="applications-functional">
            <directory suffix="Test.php">./src/iRESTful/Rodson/Tests/Applications/Tests/Functional</directory>
        </testsuite>

    </testsuites>

    <filter>
        <whitelist>
            <directory>./src</directory>
        </whitelist>
    </filter>

    <filter>
        <whitelist>
            <exclude>
                <directory>./src/iRESTful/Rodson/Tests</directory>
            </exclude>
            <directory>./src</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="./reports" charset="UTF-8" yui="true" highlight="false" lowUpperBound="35" highLowerBound="70"/>
    </logging>

</phpunit>
